{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "AmazonSageMakerStudioCreateApp",
			"Effect": "Allow",
			"Action": [
				"sagemaker:Create*"
			],
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"sagemaker:ResourceTag/user_email": "${aws:PrincipalTag/user_email}"
				}
			}
		},
		{
			"Sid": "AmazonSageMakerAllowTeamsReadOnly",
			"Effect": "Allow",
			"Action": [
				"sagemaker:Describe*",
				"sagemaker:Get*",
				"sagemaker:List*"
			],
			"Resource": "*",
			,
			"Condition": {
				"StringEquals": {
					"aws:ResourceTag/user_department": "${aws:PrincipalTag/user_deparment}"
				}
			}
		},
		{
			"Sid": "AmazonSageMakerStudioIAMPassRole",
			"Effect": "Allow",
			"Action": [
				"iam:PassRole"
			],
			"Resource": "arn:aws:iam:::role/service-role/*",
			"Condition": {
				"StringEquals": {
					"iam:PassedToService": "sagemaker.amazonaws.com"
				},
				"StringEqualsIgnoreCase": {
					"aws:ResourceTag/user_department": "${aws:PrincipalTag/user_department}"
				}
			}
		},
		{
			"Sid": "AmazonSageMakerInvokeEndPointRole",
			"Effect": "Allow",
			"Action": [
				"sagemaker:InvokeEndpoint"
			],
			"Resource": "*"
		},
		{
			"Sid": "AmazonSageMakerAddTags",
			"Effect": "Allow",
			"Action": [
				"sagemaker:AddTags"
			],
			"Resource": "*"
		},
		{
			"Sid": "AmazonSageMakerAllowUserUpdateModify",
			"Effect": "Allow",
			"Action": [
				"sagemaker:Delete*",
				"sagemaker:Stop*",
				"sagemaker:Update*",
				"sagemaker:Start*",
				"sagemaker:DisassociateTrialComponent",
				"sagemaker:AssociateTrialComponent",
				"sagemaker:BatchPutMetrics"
			],
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"aws:ResourceTag/user_email": "${aws:PrincipalTag/user_email}"
				}
			}
		},
		{
			"Sid": "AmazonSageMakerS3ReadOnlyPolicy",
			"Effect": "Allow",
			"Action": [
				"s3:ListBucket",
				"s3:ListAllMyBuckets"
			],
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"aws:ResourceTag/user_email": "${aws:PrincipalTag/user_email}"
				}
			}
		},
		{
			"Sid": "AmazonSageMakerCRUDAccessS3Policy",
			"Effect": "Allow",
			"Action": [
				"s3:PutObject",
				"s3:GetObject",
				"s3:AbortMultipartUpload",
				"s3:DeleteObject",
				"s3:PutBucketCORS",
				"s3:GetBucketCORS",
				"s3:GetBucketLocation"
			],
			"Resource": "arn:aws:s3:::*",
			"Condition": {
				"StringEquals": {
					"aws:ResourceTag/user_email": "${aws:PrincipalTag/user_email}"
				}
			}
		},
		{
			"Sid": "AmazonSageMakerReadOnlyAccessKMSPolicy",
			"Effect": "Allow",
			"Action": [
				"kms:DescribeKey",
				"kms:ListAliases"
			],
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"aws:ResourceTag/user_email": "${aws:PrincipalTag/user_email}"
				}
			}
		},
		{
			"Sid": "AmazonSageMakerCRUDAccessECRPolicy",
			"Effect": "Allow",
			"Action": [
				"ecr:Set*",
				"ecr:Batch*",
				"ecr:Upload*",
				"ecr:Put*",
				"ecr:Describe*",
				"ecr:Get*",
				"ecr:CompleteLayerUpload",
				"ecr:InitiateLayerUpload",
				"ecr:CreateRepository",
				"ecr:StartImageScan"
			],
			"Resource": "*"
		},
		{
			"Sid": "AmazonSageMakerCRUDAccessCloudWatchPolicy",
			"Effect": "Allow",
			"Action": [
				"cloudwatch:Put*",
				"cloudwatch:Get*",
				"cloudwatch:List*",
				"cloudwatch:DescribeAlarms",
				"logs:Put*",
				"logs:Get*",
				"logs:List*",
				"logs:Describe*",
				"logs:CreateLogGroup",
				"logs:CreateLogStream",
				"logs:CreateLogDelivery",
				"logs:UpdateLogDelivery"
			],
			"Resource": "*"
		},
		{
			"Sid": "AmazonSageMakerListandSearchOnlyPolicy",
			"Effect": "Allow",
			"Action": [
				"sagemaker:GetSearchSuggestions",
				"sagemaker:List*"
			],
			"Resource": "*"
		},
		{
			"Sid": "AmazonSageMakerUIandMetricsOnlyPolicy",
			"Effect": "Allow",
			"Action": [
				"sagemaker:*App",
				"sagemaker:Search",
				"sagemaker:RenderUiTemplate",
				"sagemaker:BatchGetMetrics"
			],
			"Resource": "*"
		},
		{
			"Sid": "AmazonSageMakerEC2ReadOnlyPolicy",
			"Effect": "Allow",
			"Action": [
				"ec2:DescribeDhcpOptions",
				"ec2:DescribeNetworkInterfaces",
				"ec2:DescribeRouteTables",
				"ec2:DescribeSecurityGroups",
				"ec2:DescribeSubnets",
				"ec2:DescribeVpcEndpoints",
				"ec2:DescribeVpcs"
			],
			"Resource": "*"
		},
		{
			"Sid": "AmazonSageMakerIAMReadOnlyPolicy",
			"Effect": "Allow",
			"Action": [
				"iam:ListRoles"
			],
			"Resource": "*"
		},
		{
			"Sid": "secretsmanager",
			"Effect": "Allow",
			"Action": [
				"secretsmanager:*"
			],
			"Resource": [
				"*",
				"arn:aws:secretsmanager:us-east-2::secret:*"
			],
			"Condition": {
				"StringEquals": {
					"secretsmanager:ResourceTag/user_email": "${aws:PrincipalTag/user_email}"
				}
			}
		},
		{
			"Sid": "ListSecrets",
			"Effect": "Allow",
			"Action": [
				"secretsmanager:ListSecrets",
				"secretsmanager:ListSecretVersionIds"
			],
			"Resource": [
				"arn:aws:secretsmanager:us-east-2::secret:*"
			]
		}
	]
}